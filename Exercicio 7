mf=[]
mp=[]
def media(v1):
    y= v1[0]
    b= v1[-1]
    if len(mp)==3:
        m=(sum(mp)/3)
        mf.append(m)
        mp.clear()
        return media(v1)
    if y!=b:
        mp.append(v1.pop(0))
        return media(v1)
    else:
        mp.append(b)
        m=(sum(mp)/len(mp))
        mf.append(m)
        print(mf)

        
print(media(v1))
